<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63.5dp"
        android:background="@drawable/press_selector"
        android:orientation="horizontal">

        <com.player.mothercollege.view.RoundRectImageView
            android:id="@+id/iv_me_jilu"
            android:layout_width="116dp"
            android:layout_height="63.5dp"
            android:src="@mipmap/icon_jiazai" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="63.5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_me_jilu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:text="标题"
                android:textColor="#000"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_play"/>
                <TextView
                    android:id="@+id/tv_me_jilu_viewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666"
                    android:text="***人已订阅"
                    android:textSize="14sp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_client_addbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@mipmap/btn_bank"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        >
        <ImageView
            android:id="@+id/iv_bank_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_jianshe"/>
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_bank_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="XX银行"/>
        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_bank_icon"
            android:layout_below="@id/tv_bank_name"
            android:text="尾号"/>
        <ImageView
            android:id="@+id/iv_bank_type"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_card"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_bank_name"
            android:layout_toRightOf="@id/tv_bank_number"/>
        <CheckBox
            android:id="@+id/item_cb_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bank_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon_add_card"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="添加银行卡"/>
    </LinearLayout>
</LinearLayout>

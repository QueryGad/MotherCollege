<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:src="@mipmap/icon_cutting"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_refrsh"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="305dp"
        android:background="@drawable/btn_refresh"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
         />
    <ListView
        android:id="@+id/lv_headicon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transprant"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_return"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_other_zhuanchat"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#eeff4e72"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_otherperson_guanzhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="关注"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <TextView
            android:id="@+id/tv_otherperson_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="聊天"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>

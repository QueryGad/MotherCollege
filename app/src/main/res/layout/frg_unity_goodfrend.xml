<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rg_unity_frend"
            android:layout_width="match_parent"
            android:background="@color/bg_content"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_unity_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="@color/transprant"
                android:drawableTop="@mipmap/icon_friend_news"
                android:text="消息"
                />
            <Button
                android:id="@+id/btn_unity_addresslist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="@color/transprant"
                android:drawableTop="@mipmap/icon_friend_linkman"
                android:text="通讯录"
                />
            <Button
                android:id="@+id/btn_unity_qunchat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="@color/transprant"
                android:drawableTop="@mipmap/icon_friend_group"
                android:text="群聊"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:text="好友推荐"
                android:textColor="#000"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/ll_user_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:background="@color/white"
                android:text="群推荐"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/ll_group_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

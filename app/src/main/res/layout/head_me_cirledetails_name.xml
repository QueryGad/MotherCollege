<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/iv_cirledetails_head"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/head_group"/>
    <ImageView
        android:id="@+id/iv_cirledetails_join"
        android:layout_width="12.5dp"
        android:layout_height="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_cirledetails_head"
        android:src="@mipmap/icon_2_person"/>
    <TextView
        android:id="@+id/tv_cirledetails_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_cirledetails_join"
        android:text="0"/>
    <ImageView
        android:id="@+id/iv_cirledetails_trend"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tv_cirledetails_join"
        android:src="@mipmap/icon_tie"/>
    <TextView
        android:id="@+id/tv_cirledetails_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_cirledetails_trend"
        android:text="0"/>
    <ImageView
        android:id="@+id/iv_cirle_hasjoin"
        android:layout_width="56dp"
        android:layout_height="22dp"
        android:src="@mipmap/icon_join"
        android:layout_alignBottom="@+id/iv_cirledetails_head"
        android:layout_alignLeft="@+id/iv_cirledetails_join"
        android:layout_alignStart="@+id/iv_cirledetails_join" />
    <TextView
        android:id="@+id/tv_cirledetails_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="圈子介绍 >"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="#f00"/>

</RelativeLayout>

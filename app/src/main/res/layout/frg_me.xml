<?xml version="1.0" encoding="utf-8"?>
<com.player.mothercollege.view.SpringBackScroll
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@mipmap/bg_me_head"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                style="@style/title">
                <TextView
                    style="@style/title_text"
                    android:text="我的"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_me_icon"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:background="@mipmap/head_me_nor"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                >
                <TextView
                    android:id="@+id/tv_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="登录名"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"/>
                <ImageButton
                    android:id="@+id/ib_me_edit"
                    android:layout_toRightOf="@id/tv_me_name"
                    android:layout_marginLeft="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_me_edit"/>
            </RelativeLayout>

                <TextView
                    android:id="@+id/tv_me_uid"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_me_smart"
                    style="@style/linear_me_money">
                    <TextView
                        android:id="@+id/tv_me_smart_num"
                        style="@style/text_me_money"
                        android:text="0"/>
                    <TextView
                        style="@style/text_me_money"
                        android:text="智慧币"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_me_glode"
                    style="@style/linear_me_money">
                    <TextView
                        android:id="@+id/tv_me_glode_num"
                        style="@style/text_me_money"
                        android:text="0"/>
                    <TextView
                        style="@style/text_me_money"
                        android:text="金币"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_me_att"
                    style="@style/linear_me_money">
                    <TextView
                        android:id="@+id/tv_me_att_num"
                        style="@style/text_me_money"
                        android:text="0"/>
                    <TextView
                        style="@style/text_me_money"
                        android:text="关注"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_me_fans"
                    style="@style/linear_me_money">
                    <TextView
                        android:id="@+id/tv_me_fans_num"
                        style="@style/text_me_money"
                        android:text="0"/>
                    <TextView
                        style="@style/text_me_money"
                        android:text="粉丝"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_content">
            <LinearLayout
                android:id="@+id/ll_me_take"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_task"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的订阅"/>
                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_class"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_course"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的课程"/>
                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_plat"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_terrace"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的平台"/>
                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_circle"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_circle"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的圈子"/>

                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_message"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_message"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的消息"/>

                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_college"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_college"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="我的收藏"/>

                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ll_me_setting"
                style="@style/linear_me_item">
                <ImageView
                    style="@style/icon_me"
                    android:src="@mipmap/ic_me_setting"
                    />
                <TextView
                    style="@style/text_me_title"
                    android:text="系统设置"/>

                <ImageView
                    style="@style/icon_find_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>
        </LinearLayout>

    </LinearLayout>
</com.player.mothercollege.view.SpringBackScroll>

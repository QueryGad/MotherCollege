<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_activitydetails_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:padding="10dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="标题"/>
    <LinearLayout
        android:id="@+id/ll_activitydetails_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_activitydetails_title"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_time"/>
        <TextView
            android:id="@+id/tv_activitydetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="时间"/>
    </LinearLayout>
    <View
        android:id="@+id/view_activitydetails_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/ll_activitydetails_time"
        android:background="@color/bg_content"/>
    <LinearLayout
        android:id="@+id/ll_activitydetails_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/view_activitydetails_1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_1_place"/>
        <TextView
            android:id="@+id/tv_activitydetails_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="地址"/>
    </LinearLayout>
    <View
        android:id="@+id/view_activitydetails_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/ll_activitydetails_place"
        android:background="@color/bg_content"/>
    <LinearLayout
        android:id="@+id/ll_activitydetails_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/view_activitydetails_2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_2_person"/>
        <TextView
            android:id="@+id/tv_activitydetails_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="人数"/>
    </LinearLayout>
    <View
        android:id="@+id/view_activitydetails_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/ll_activitydetails_num"
        android:background="@color/bg_content"/>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/webView_activitydetails"
        android:padding="10dp"
        android:layout_below="@id/view_activitydetails_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_activitydetails_z"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/webView_activitydetails"
        android:layout_marginRight="7dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_favour_samll" />

        <TextView
            android:id="@+id/tv_invit_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_discuss_small" />

        <TextView
            android:id="@+id/tv_invit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activitydetails_c"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/ll_activitydetails_z"
        android:layout_marginTop="12dp"
        android:background="@color/bg_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_favour_list" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                >
                <GridView
                    android:id="@+id/gr_activitydetails_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

</RelativeLayout>

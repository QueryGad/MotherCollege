<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cirlearticle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp">
        <ImageView
            android:id="@+id/iv_cirlearticle_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@mipmap/head_tolerant_person"/>
        <TextView
            android:id="@+id/tv_cirlearticle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="---"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:layout_toRightOf="@id/iv_cirlearticle_head"/>
        <TextView
            android:id="@+id/tv_cirlearticle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cirlearticle_name"
            android:layout_toRightOf="@id/iv_cirlearticle_head"
            android:layout_marginLeft="5dp"
            android:text="-分钟"/>
        <TextView
            android:id="@+id/tv_cirlearticle_address"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#7ECFF3"
            android:text="---"/>
        <TextView
            android:layout_toLeftOf="@id/tv_cirlearticle_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="来自"/>
        <TextView
            android:id="@+id/tv_cirlearticle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="标题"
            android:textColor="#000"
            android:layout_below="@id/iv_cirlearticle_head"/>
        <TextView
            android:id="@+id/tv_cirlearticle_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="内容"
            android:layout_below="@id/tv_cirlearticle_title"/>
    </RelativeLayout>
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/nineGrid"
        android:layout_below="@id/tv_cirlearticle_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cirlearticle_detele"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#01AEFD"
            android:text="删除"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_favour_samll"/>
        <TextView
            android:id="@+id/tv_cirlearticle_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="0"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_discuss_small"/>
        <TextView
            android:id="@+id/tv_cirlearticle_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="0"/>
    </LinearLayout>
</LinearLayout>

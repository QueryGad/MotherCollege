<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:orientation="vertical"
        android:background="@mipmap/bg_college"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_recomm_title"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/ic_college_readbook"/>
            <TextView
                android:id="@+id/tv_recomm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读书"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="63.5dp"
            android:background="@drawable/press_selector"
            android:clickable="true"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="116dp"
                android:layout_height="63.5dp">
                <com.player.mothercollege.view.RoundRectImageView
                    android:id="@+id/iv_recomm_one"
                    android:layout_width="116dp"
                    android:layout_height="63.5dp"
                    android:src="@mipmap/icon_jiazai"
                    />
                <TextView
                    android:id="@+id/tv_recomm_data_one"
                    style="@style/tv_date"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="63.5dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_recomm_title_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="妈妈成长手册"/>
                    <TextView
                        android:id="@+id/tv_recomm_xm_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限免"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_recomm_editor_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text="教授"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_college_cut"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_recomm_viewCount_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text="人已看"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="63.5dp"
            android:background="@drawable/press_selector"
            android:clickable="true"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="116dp"
                android:layout_height="63.5dp">
                <com.player.mothercollege.view.RoundRectImageView
                    android:id="@+id/iv_recomm_two"
                    android:layout_width="116dp"
                    android:layout_height="63.5dp"
                    android:src="@mipmap/icon_jiazai"
                    />
                <TextView
                    android:id="@+id/tv_recomm_data_two"
                    style="@style/tv_date"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="63.5dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_recomm_title_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="妈妈成长手册"/>
                    <TextView
                        android:id="@+id/tv_recomm_xm_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限免"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_recomm_editor_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#f00"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text="教授"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_college_cut"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_recomm_viewCount_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text="人已看"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

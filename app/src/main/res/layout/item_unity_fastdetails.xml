<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_fastdetails_other"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/head_homepage_others"/>
    <TextView
        android:id="@+id/tv_fastdetails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_fastdetails_other"/>
    <TextView
        android:id="@+id/tv_fastdetails_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_fastdetails_name"
        android:layout_toRightOf="@id/iv_fastdetails_other"
        android:text="时间"/>
    <TextView
        android:id="@+id/tv_fastdetails_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/iv_fastdetails_other"
        android:text="评论内容"
        android:textSize="15sp"
        android:textColor="#000"/>

</RelativeLayout>

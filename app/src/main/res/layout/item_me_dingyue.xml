<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63.5dp"
        android:background="@drawable/press_selector"
        android:orientation="horizontal">

        <com.player.mothercollege.view.RoundRectImageView
            android:id="@+id/iv_me_dingyue"
            android:layout_width="116dp"
            android:layout_height="63.5dp"
            android:src="@mipmap/icon_jiazai" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="63.5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/tv_me_dingyue_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_me_dingyue_viewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="***人已订阅"
                android:textColor="#f00"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

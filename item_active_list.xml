<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_active_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更多活动"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/iv_active"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_active_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="活动标题"/>
        <ImageView
            android:layout_width="11.5dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_place"/>
        <TextView
            android:id="@+id/tv_active_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="郑州"/>
        <ImageView
            android:layout_width="11.5dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_2_person"/>
        <TextView
            android:id="@+id/tv_active_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="17dp"
            android:text="0人"/>
    </LinearLayout>

</LinearLayout>
